
<MainWindow@GridLayout>:
    cols: 2
    spacing: [18, 12]
    padding: [24, 18]
    cols_minimum: {1: 240}
    Label:
        size_hint_y: .12
        text: "User"
    TextInput:
        id: user_name
        size_hint_y: .12
        text: app.user_name
    Label:
        size_hint_y: .12
        text: "Password"
    TextInput:
        id: user_password
        size_hint_y: .12
        test: app.user_password
        focus: True
    Label:
        text: "Progress (" + str(app.file_count) + " files)"
    ProgressBar:
    Button:
        size_hint_y: .27
        text: 'Cancel'
        on_press: app.exit_app()
    Button:
        size_hint_y: .27
        text: 'Import'
        on_press: app.run_import()
        disabled: app.file_count == 0 or user_password.text == ''
