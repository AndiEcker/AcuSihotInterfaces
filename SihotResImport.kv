
<MainWindow@GridLayout>:
    cols: 2
    spacing: [18, 12]
    padding: [24, 18]
    cols_minimum: {1: 240}
    Label:
        size_hint_y: .69
        text: str(app.file_count) + " file(s) found: " + app.file_names
        text_size: self.size
        halign: 'justify'
        valign: 'top'
    ScrollView:
        size_hint_y: .69
        Label:
            size_hint_y: None
            id: error_log
            text_size: self.parent.width, None
            size: self.texture_size
    Label:
        size_hint_y: .09
        text: "User"
    CapitalInput:
        id: user_name
        size_hint_y: .09
        write_tab: False
        multiline: False
        text: app.user_name
    Label:
        size_hint_y: .09
        text: "Password"
    TextInput:
        id: user_password
        size_hint_y: .09
        write_tab: False
        multiline: False
        password: True
        focus: app.user_name
        text: app.user_password
    Button:
        id: import_button
        size_hint_y: .27
        text: "Import " + str(app.file_count) + " file(s)"
        on_press: app.run_import()
        disabled: app.file_count == 0 or user_name.text == '' or user_password.text == ''
    Button:
        size_hint_y: .27
        text: "Exit"
        on_press: app.exit_app()
