
<BoardMenu@ActionButton>:
    on_press: app.go_to_board(self.text)

<CheckMenu@ActionButton>:
    on_press: app.do_checks(self.text)

<ListMenu@ActionButton>:
    on_press: app.go_to_board(self.text)

<FilterActionButton>:
    on_press: app.change_filter(self.text, self.criteria_name, self.criteria_type)

<FilterSelectionItem>:
    on_press: app.filter_selected(self.text, self.criteria_name, self.criteria_type)

<ListItem@Label>:
    # width+9 sometimes needed for to show text in one line
    #text_size: min(self.width, self.texture_size[0] if self.texture_size[0] else self.width) + 9, min(self.height, self.texture_size[1] if self.texture_size[1] else self.height)
    #text_size: self.size[0], None
    text_size: self.size

<CheckItem>:    # BoxLayout
    orientation: 'vertical'
    size_hint_y: None
    height: 120
    canvas:
        Color:
            rgba: root.data_dict['background_color']
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        Button:
            text: root.data_dict['name']
            on_press: app.go_to_board(self.text)
        Label:
            text: root.data_dict['last_check'] if 'last_check' in root.data_dict else ''
    Button:
        text: app.result_text(root.data_dict)
        text_size: self.size
        on_press: app.do_checks(root.data_dict['name'])

<MainWindow>:   # @FloatLayout>:
    ActionBar:
        id: menu_bar
        pos_hint: {'top': 1}
        background_color: (0, .36, .36, 1)
        FixedActionView:
            id: action_view
            background_color: (0, .36, .36, 1)
            use_separator: True
            ActionPrevious:
                id: action_previous
                title: ''
                with_previous: False
            # having ActionOverflow un-commented crashes in ActionView.remove_widget() because this method is trying
            # .. to remove non-existent items from ActionView._list_action_items that are within the list
            # .. ActionOverflow.list_action_item
            ActionOverflow:
            FixedActionGroup:
                id: board_group
                dropdown_width: 270
                text: 'Boards'
            FixedActionGroup:
                id: check_group
                dropdown_width: 270
                text: 'Checks'
            FixedActionGroup:
                id: list_group
                dropdown_width: 270
                text: 'Lists'
    BoxLayout:
        id: list_header
        pos: 0, root.height - menu_bar.height - self.height
        size_hint: None, None
        size: root.width, app.list_header_height
        canvas.before:
            Color:
                # rgba: app.get_background_color(action_previous.title) if action_previous.title else (0, .36, .36, 1)
                rgba: app.get_background_color(action_previous.title)
            Rectangle:
                pos: self.pos
                size: self.size
    ScrollView:
        pos: 0, 0
        size_hint: None, None
        size: root.width, root.height - menu_bar.height - app.list_header_height
        canvas.before:
            Color:
                rgba: (0, .36, .36, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            id: list_grid
            cols: 1
            size_hint_y: None
            pos: self.parent.x, self.parent.y
            height: self.minimum_height

<LogonWindow@GridLayout>:
    cols: 2
    spacing: [180, 120]
    padding: [240, 180]
    cols_minimum: {1: 240}
    Label:
        size_hint_y: .09
        text: "User"
    CapitalInput:
        id: user_name
        size_hint: .09, None
        height: 33
        write_tab: False
        multiline: False
        text: app.user_name
    Label:
        size_hint_y: .09
        text: "Password"
    TextInput:
        id: user_password
        size_hint: .09, None
        height: 33
        write_tab: False
        multiline: False
        password: True
        focus: app.user_name
        text: app.user_password
    Button:
        id: import_button
        size_hint_y: .27
        text: "Logon"
        on_press: app.logon()
        disabled: user_name.text == '' or user_password.text == ''
    Button:
        size_hint_y: .27
        text: "Exit"
        on_press: app.exit_app()
