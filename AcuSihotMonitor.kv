
<BoardMenu@ActionButton>:
    on_press: app.go_to_board(self.text)

<CheckMenu@ActionButton>:
    on_press: app.do_checks(self.text)

<ListMenu@ActionButton>:
    on_press: app.go_to_board(self.text)

<CheckItem>:    # BoxLayout
    orientation: 'vertical'
    size_hint_y: None
    height: 120
    canvas:
        Color:
            rgba: root.data_dict['background_color']
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        Button:
            text: root.data_dict['name']
            on_press: app.do_checks(self.text)
        Label:
            text: root.data_dict['last_check'] if 'last_check' in root.data_dict else ''
    Button:
        text: (root.data_dict['check_result'] if isinstance(root.data_dict['check_result'], str) else str(len(root.data_dict['check_result']))) if 'check_result' in root.data_dict else '(no check run)'
        text_size: self.size
        on_press: app.go_to_board(root.data_dict['name'])

<MainWindow>:   # @FloatLayout>:
    ActionBar:
        id: menu_bar
        pos_hint: {'top': 1}
        background_color: (0, .36, .36, 1)
        ActionView:
            background_color: (0, .36, .36, 1)
            use_separator: True
            ActionPrevious:
                id: action_previous
                title: 'Main'
                with_previous: False
            ActionOverflow:
            ActionGroup:
                id: board_group
                dropdown_width: 270
                text: 'Boards'
            ActionGroup:
                id: check_group
                dropdown_width: 270
                text: 'Checks'
            ActionGroup:
                id: list_group
                dropdown_width: 270
                text: 'Lists'
    ScrollView:
        pos: 0, 0
        size_hint: None, None
        size: root.width, root.height - menu_bar.height
        canvas.before:
            Color:
                rgba: (0, .36, .36, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            id: item_grid
            cols: 1
            size_hint_y: None
            pos: self.parent.x, self.parent.y
            height: self.minimum_height
