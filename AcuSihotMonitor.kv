
<BoardMenu@ActionButton>:
    on_press: app.go_to_board(self.text)

<CheckMenu@ActionButton>:
    on_press: app.do_checks(self.text)

<CheckItem>:
    orientation: 'vertical'
    size_hint_y: None
    height: 120
    canvas:
        Color:
            rgba: root.data_dict['background_color']
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        Button:
            text: root.data_dict['name']
            on_press: app.do_checks(self.text)
        Label:
            text: root.data_dict['last_check'] if 'last_check' in root.data_dict else ''
    Label:
        text: root.data_dict['check_result'] if 'check_result' in root.data_dict else ''


<MainWindow>:   # @FloatLayout>:
    ActionBar:
        id: menu_bar
        pos_hint: {'top': 1}
        background_color: (0, .36, .36, 1)
        ActionView:
            background_color: (0, .36, .36, 1)
            use_separator: True
            ActionPrevious:
                id: action_previous
                title: 'Main'
                with_previous: False
            ActionOverflow:
            ActionGroup:
                id: board_group
                text: 'Boards'
            ActionGroup:
                id: check_group
                dropdown_width: 180
                text: 'Checks'
            ActionGroup:
                text: 'Lists'
                dropdown_width: 180
                ActionButton:
                    text: 'Sync Log'
                    on_press: app.go_to_board('SyncLog')
                ActionButton:
                    text: 'Error Log'
                    on_press: app.go_to_board('ErrLog')
                ActionButton:
                    text: 'Unsynced Res.'
                    on_press: app.go_to_board('UnsyncedRes')
                ActionButton:
                    text: 'Unsynced Clients'
                    on_press: app.go_to_board('UnsyncedClient')
    ScrollView:
        pos: 0, 0
        size_hint: None, None
        size: root.width, root.height - menu_bar.height
        canvas.before:
            Color:
                rgba: (0, .36, .36, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            id: check_items
            cols: 1
            size_hint_y: None
            pos: self.parent.x, self.parent.y
            height: self.minimum_height
